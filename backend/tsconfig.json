{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@lib/*": ["lib/*"],
      "@routes/*": ["routes/*"]
    },
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "prisma", "global.d.ts","src/types/*.d.ts"]
}